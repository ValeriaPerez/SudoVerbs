#!/bin/bash 

size=${#verbarray[@]}

rand=$(( ( RANDOM % size )  + 1 ))

RED='\033[1;33m'
PURPLE='\033[0;35m'
NC='\033[0m' # No Color
bold=$(tput bold)
normal=$(tput sgr0)

printf "${bold}Verb of the session: ${RED}${verbarray[rand-1],,}${NC}\n"
printf "${bold}In Past            : ${PURPLE}${pastarray[rand-1],,}${NC}\n"
printf "${bold}In Past Participle : ${PURPLE}${pastparticiplearray[rand-1],,}${NC}\n"
printf "${bold}In Translation     : ${PURPLE}${translationarray[rand-1],,}${NC}\n"
printf "\n"

exit 0
